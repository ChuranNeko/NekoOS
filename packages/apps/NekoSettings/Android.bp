// 定义构建系统如何生成 NekoSettings 应用。
android_app {
    name: "NekoSettings",          // APK 名称
    srcs: ["src/**/*.java"],       // Java 源文件
    resource_dirs: ["res"],        // 资源目录
    manifest: "AndroidManifest.xml",
    privileged: true,              // 安装到 privileged 分区以访问系统配置
    certificate: "platform",       // 使用 platform 签名
    system_ext_specific: true,     // 安装到 system_ext 支持 GSI
    // TODO: add more overlays or prebuilt apps here
}
